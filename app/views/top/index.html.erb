<p id="notice"><%= notice %></p>

<h1>今夜のメシガチャ</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">レシピ</h3>
      </div>
      <div class="panel-body">
        <table class="table table-striped table-hover ">
          <tbody>

          <% @recipes.each do |recipe| %>
            <tr>
              <td>
                <%= link_to recipe.recipeTitle , recipe.recipeUrl %>
              </td>
            </tr>
            <tr>
            <td>
            <%= recipe.recipeDescription %>
            </td>
            </tr>
            <tr>
              <td>
                材料<br>
                <%= recipe.recipeMaterial %>
              </td>
            </tr>
            <tr>
              <td>
                <% if recipe.foodImageUrl? && recipe.foodImageUrl != "{}" %>
                <%= image_tag recipe.foodImageUrl , :size => '200x200' %>
                <% end %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table> 
      </div>
    </div>


  </tbody>
</table>

<br>

