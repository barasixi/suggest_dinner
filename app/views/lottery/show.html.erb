    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">
          
            <%= link_to "肉ガチャ", lottery_meet_path , class: "btn btn-primary" %>　　　　
            <%= link_to "魚ガチャ", lottery_fish_path , class: "btn btn-primary" %>　　　　
            <%= link_to "野菜ガチャ", lottery_vegetable_path , class: "btn btn-primary" %>
        </h3>
      </div>
      <div class="panel-body">
        <table class="table table-striped table-hover ">


          <% @recipes.each do |recipe| %>
            <tr>
                <td>
                  <%= link_to recipe.recipeTitle , recipe.recipeUrl %>
                </td>
              <!-- </tr> -->
              <!-- <tr> -->
              <td>
              <%= recipe.recipeDescription %>
              </td>
              <!-- </tr> -->
              <!-- <tr> -->
                <td>
                  材料<br>
                  <%= recipe.recipeMaterial %>
                </td>
                <tr>
                <td>
                  <%= image_tag(RakutenRecipe.random_label, alt: "アイコン", size: "192x96") %>
                </td>
                <td colspan=2>
                  <% recipe.rank.to_i.times do %>
                    <%= image_tag("star.png", :alt => "アイコン", :size => "64x64") %>
                  <% end %>
                </td>
                </tr>
              </tr>
              <tr>
                <td>
                  <% if recipe.foodImageUrl? && recipe.foodImageUrl != "{}" %>
                  <%= image_tag recipe.foodImageUrl , :size => '200x200' %>
                  <% end %>
                </td>
            </tr>
          <% end %>

          </tbody>
        </table> 
      </div>
    </div>
